<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/agro_background">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Criar conta"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/agro_text_dark"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etName"
            android:hint="Nome completo"
            android:background="@drawable/agro_input"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etEmail"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="12dp"
            android:background="@drawable/agro_input"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etPassword"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"
            android:background="@drawable/agro_input"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnRegister"
            android:text="Criar conta"
            android:textAllCaps="false"
            android:background="@color/agro_primary"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLogin"
            android:text="JÃ¡ tenho conta"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/agro_primary"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
