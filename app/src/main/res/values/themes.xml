<resources>
    <style name="Theme.AgroFacil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/agro_primary</item>
        <item name="colorPrimaryVariant">@color/agro_primary_light</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/agro_secondary</item>

        <item name="android:windowBackground">@color/agro_background</item>

        <!-- Botões -->
        <item name="materialButtonStyle">@style/AgroButton</item>

        <!-- Cards -->
        <item name="materialCardViewStyle">@style/AgroCard</item>
    </style>

    <!-- Botões -->
    <style name="AgroButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@color/agro_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">14dp</item>
    </style>

    <!-- Cards -->
    <style name="AgroCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">14dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:padding">14dp</item>
    </style>
</resources>
